{
  "manifest_version": 3,
  "name": "BrowserClaw",
  "version": "0.0.2",
  "description": "Automated social media management with AI-powered browser automation",
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "assets/icon16.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    }
  },
  "background": {
    "service_worker": "src/background.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.tsx"]
    }
  ],
  "side_panel": {
    "default_path": "src/sidepanel.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*",
    "<all_urls>"
  ],
  "commands": {
    "open-browserclaw": {
      "suggested_key": {
        "default": "Ctrl+M",
        "mac": "Command+M"
      },
      "description": "Open BrowserClaw command menu"
    }
  },
  "permissions": [
    "nativeMessaging",
    "tabs",
    "windows",
    "tabGroups",
    "activeTab",
    "bookmarks",
    "browsingData",
    "history",
    "scripting",
    "search",
    "commands",
    "storage",
    "contextMenus",
    "sessions",
    "sidePanel",
    "management",
    "downloads",
    "tabCapture",
    "alarms",
    "webNavigation"
  ]
}

